<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/movie.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <form class="movie-form" action="/admin/<% if (editing) { %>edit-movie<% } else {%>add-movie<% } %>" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<% if (editing) { %> <%= movie.title %> <% } %>">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image URL</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %> <%= movie.imageUrl %> <% } %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="text" name="price" id="price" step="0.01" value="<% if (editing) { %> <%= movie.price %> <% } %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><% if (editing) { %> <%= movie.description %> <% } %></textarea>
        </div>
        <%if (editing) { %>
            <input type="hidden" value="<%= movie.id %>" name="movieId">
        <% } %>
        <button class="btn" type="submit"><% if (editing) { %>Update Movie<%} else { %>Add Movie <% } %></button>
    </form>
</main>
<%- include('../includes/end.ejs') %>